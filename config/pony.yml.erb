default: &default
  from: no-reply@unep-wcmc.org
  via: smtp
  via_options:
    authentication: login
    host:      <%= ENV["MAILER_HOST"]     %>
    address:   <%= ENV["MAILER_ADDRESS"]  %>
    user_name: <%= ENV["MAILER_USERNAME"] %>
    password:  <%= ENV["MAILER_PASSWORD"] %>
    domain:    <%= ENV["MAILER_DOMAIN"]   %>
    port:      <%= ENV["MAILER_PORT"]     %>

development:
  <<: *default
test:
  <<: *default
staging:
  <<: *default
production:
  <<: *default
