SELECT
  countries.name,
  countries.iso_3,
  country_statistics.*,
  regions.name AS region_name,
  regions.iso AS region_iso
FROM countries
  LEFT JOIN regions ON regions.id = countries.region_id
  LEFT JOIN country_statistics ON country_statistics.country_id = countries.id
WHERE countries.iso_3 = '<%= iso_3 %>'
LIMIT 1
